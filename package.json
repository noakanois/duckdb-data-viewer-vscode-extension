{
  "name": "duckdb-data-viewer",
  "displayName": "DuckDB Data Viewer Pro",
  "description": "Advanced data viewer powered by DuckDB WASM. View, query, analyze, and transform CSV, Parquet, Arrow, JSON, JSONL files with SQL. Features: data profiling, query builder, pivot tables, charts, export, and more!",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "duckdb-viewer.viewFile",
        "title": "View File with DuckDB"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .csv",
          "command": "duckdb-viewer.viewFile",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .parquet",
          "command": "duckdb-viewer.viewFile",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .parq",
          "command": "duckdb-viewer.viewFile",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .sqlite",
          "command": "duckdb-viewer.viewFile",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .arrow",
          "command": "duckdb-viewer.viewFile",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .ipc",
          "command": "duckdb-viewer.viewFile",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .json",
          "command": "duckdb-viewer.viewFile",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .jsonl",
          "command": "duckdb-viewer.viewFile",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .ndjson",
          "command": "duckdb-viewer.viewFile",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@duckdb/duckdb-wasm": "^1.30.0",
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
